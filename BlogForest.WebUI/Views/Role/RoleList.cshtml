@model List<AppRole>
@{
    ViewData ["Title"] = "RoleList";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<h1>Role List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</td>
        <th>Role Name</td>
        <th>Update Role</td>
        <th>Delete Role</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class=" btn btn-danger">Delete</a></td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Role/CreateRole/" class="btn btn-info"> Add Role </a>

