@model List<Blog>
@{
    ViewData ["Title"] = "MyBlogList";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<h1>Your Blogs</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Title</th>
        <th>Category</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Update</th>
        
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.BlogId</td>
            <td>@item.Title</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
            <td><a href="/User/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Delete</a></td>
            <td><a href="/User/Blog/UpdateBlog/@item.BlogId" class="btn btn-success">Update</a></td>
            
           
        </tr>
    }
</table>
<a href="/User/Blog/CreateBlog" class="btn btn-primary"> Add New Blog</a>

