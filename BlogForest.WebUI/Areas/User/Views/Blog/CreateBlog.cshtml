@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<h1>Add New Blog</h1>

<form method="post">
    <div class="form-group">
        <label >Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label >Small Image Url</label>
        <input type="text" asp-for="ThumbnailImageUrl" class="form-control" />

    </div>
    <div class="form-group">
        <label > Cover Image Url</label>
        <input type="text" asp-for="CoverImageUrl" class="form-control" />

    </div>
    <div class="form-group">
        <label >Description</label>
        <textarea  asp-for="Description"  class="form-control" ></textarea>
        

    </div>
    <div class="form-group">
        <label>CategoryId</label>
        <input type="text" asp-for="CategoryId" class="form-control" />

    </div>
    
    <button  class="btn btn-info">Save</button>
    </form>